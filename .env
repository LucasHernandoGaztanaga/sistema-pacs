# PACS System Environment Variables
# Sistema de Archivo y Comunicación de Imágenes Médicas

# ===========================================
# CONFIGURACIÓN GENERAL DEL SISTEMA
# ===========================================
COMPOSE_PROJECT_NAME=pacs-system
TZ=America/Argentina/Cordoba

# ===========================================
# POSTGRESQL DATABASE
# ===========================================
POSTGRES_DB=pacsdb
POSTGRES_USER=pacs
POSTGRES_PASSWORD=PacsSecure2024!DB
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===========================================
# LDAP CONFIGURATION
# ===========================================
LDAP_ORGANISATION=Hospital PACS System
LDAP_DOMAIN=pacs.local
LDAP_BASE_DN=dc=pacs,dc=local
LDAP_ADMIN_PASSWORD=LdapAdmin2024!Secure
LDAP_READONLY_USER=true
LDAP_READONLY_USER_USERNAME=readonly
LDAP_READONLY_USER_PASSWORD=ReadOnly2024!Pass

# ===========================================
# DCM4CHEE CONFIGURATION
# ===========================================
ARCHIVE_DEVICE_NAME=dcm4chee-arc
ARCHIVE_HOST=dcm4chee-arc
STORAGE_DIR=/storage/fs1
DICOM_PORT=11112
DICOM_TLS_PORT=2762
HL7_PORT=2575
AE_TITLE=DCM4CHEE
WILDFLY_ADMIN_USER=admin
WILDFLY_ADMIN_PASSWORD=WildflyAdmin2024!

# ===========================================
# OHIF VIEWER
# ===========================================
OHIF_PORT=3000
APP_CONFIG=/usr/share/nginx/html/app-config.js

# ===========================================
# OVIYAM VIEWER
# ===========================================
OVIYAM_PORT=8081
OVIYAM_CONTEXT=oviyam

# ===========================================
# NGINX PROXY
# ===========================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# STORAGE PATHS (Host Machine)
# ===========================================
HOST_DICOM_STORAGE=${PWD}/data/dicom-storage
HOST_DB_DATA=${PWD}/data/postgres
HOST_LDAP_DATA=${PWD}/data/ldap
HOST_LOGS=${PWD}/data/logs
